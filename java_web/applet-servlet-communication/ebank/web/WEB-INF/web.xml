<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>UserService</servlet-name>
        <servlet-class>servlet.UserService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountService</servlet-name>
        <servlet-class>servlet.AccountService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogService</servlet-name>
        <servlet-class>servlet.LogService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserService</servlet-name>
        <url-pattern>/service/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountService</servlet-name>
        <url-pattern>/service/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogService</servlet-name>
        <url-pattern>/service/log</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
